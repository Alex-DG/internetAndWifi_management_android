<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/black" >

    <Button
        android:id="@+id/btn_check"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:background="@color/white"
        android:text="Check Internet Status" />

    <Button
        android:id="@+id/btn_enable_wifi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_disable_wifi"
        android:layout_alignLeft="@+id/btn_disable_data_connection"
        android:layout_marginBottom="14dp"
        android:background="@color/white"
        android:text="Enable wifi" />
    
    <Button
        android:id="@+id/btn_disable_wifi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_enable_wifi"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:background="@color/white"
        android:text="Disable wifi" />

    <Button
        android:id="@+id/btn_disable_data_connection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_enable_wifi"
        android:layout_alignLeft="@+id/btn_check"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:text="Disable Internet" />

    <TextView
        android:id="@+id/textView_label01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_enable_data_connection"
        android:layout_alignLeft="@+id/btn_enable_data_connection"
        android:layout_marginBottom="16dp"
        android:text="Internet and Wifi Management:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView_label02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_check"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:text="Internet Status:"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_enable_data_connection"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_disable_data_connection"
        android:layout_alignLeft="@+id/btn_disable_data_connection"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        android:text="Enable Internet" />
 
</RelativeLayout>

